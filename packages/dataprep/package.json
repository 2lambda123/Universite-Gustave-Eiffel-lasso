{
  "name": "@lasso/dataprep",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "@turf/bbox": "^6.5.0",
    "@turf/combine": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "ajv": "^8.11.0",
    "chroma-js": "^2.4.2",
    "geojson": "^0.5.0",
    "nodemon": "^2.0.19",
    "shorthash2": "^1.0.3",
    "typescript-json-schema": "^0.59.0"
  },
  "devDependencies": {
    "@types/geojson": "^7946.0.10"
  },
  "scripts": {
    "clean": "rimraf lib/",
    "lint": "esw --ext .ts ./src",
    "compile": "tsc -b",
    "generate:jsonschema": "typescript-json-schema --skipLibCheck ./src/types.ts ImportProject --out ./src/json-schema.json",
    "test": "mocha --recursive --fail-zero 'false' --require ts-node/register 'test/**/*.ts' ",
    "build": "npm run clean && npm run lint && npm run generate:jsonschema && npm run compile",
    "start": "concurrently -n lint,compile,exec \"npm run lint -- --watch\" \"npm run compile -- --watch\" \"nodemon --watch ./lib --watch ../../data --ignore validation_errors.json --exec npm run exec\"",
    "exec": "ts-node ./src/index.ts"
  }
}
